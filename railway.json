{
  "services": {
    "backend": {
      "build": {
        "buildCommand": "pip install -r requirements.txt",
        "startCommand": "uvicorn app.main:app --host 0.0.0.0 --port 8000"
      },
      "env": {
        "PORT": 8000
      },
      "rootDir": "backend"
    },
    "frontend": {
      "build": {
        "buildCommand": "npm install && npm run build",
        "startCommand": "npm run preview -- --port 3000"
      },
      "rootDir": "frontend"
    }
  }
}
